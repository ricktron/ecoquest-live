VITE_SUPABASE_URL= # required
VITE_SUPABASE_ANON_KEY= # required
VITE_DEFAULT_ASSIGNMENT_ID= # required

# Feature flags
VITE_FEATURE_TROPHIES=true           # Show trophies section (default: false)
VITE_FEATURE_TICKER=true             # Show news ticker banner (default: true)
VITE_FEATURE_DAILY_TROPHIES=true     # Show daily trophy ribbons (default: true)
VITE_ENABLE_ADMIN=false              # Show admin/debug pages (default: false)

# Trip configuration
VITE_TRIP_PROFILE=testing            # Trip profile: testing | costa_rica | big_bend | campus (default: testing)
# Alternative: use legacy mode and explicit dates
VITE_TRIP_MODE=testing               # Legacy: testing | costa_rica | big_bend | campus
VITE_TRIP_START=2025-01-10           # Override trip start date (ISO format)
VITE_TRIP_END=2025-01-20             # Override trip end date (ISO format)
VITE_LOCK_DATES=true                 # Lock date pickers to trip window (default: true when mode â‰  testing)

# Ticker & UI
VITE_TICKER_SPEED_MS=30000           # News ticker scroll speed in milliseconds (default: 30000)
VITE_TZ=America/Chicago              # Timezone for scoring windows (default: America/Chicago)

# Email digests (requires Resend API key or SMTP)
VITE_ENABLE_EMAIL_DIGEST=false       # Enable daily email digests (default: false)
VITE_EMAIL_FROM=noreply@example.com  # Email sender address
VITE_DIGEST_TO=staff@example.com     # Comma-separated list of digest recipients
