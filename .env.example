# Supabase Configuration
VITE_SUPABASE_URL= # required
VITE_SUPABASE_ANON_KEY= # required
VITE_DEFAULT_ASSIGNMENT_ID= # required

# Feature flags
VITE_FEATURE_TROPHIES=true           # Show trophies section (default: false)
VITE_ENABLE_ADMIN=false              # Show admin/debug pages (default: false)

# Trip configuration
# Options: CR_TRIP_2025 | TEST
VITE_TRIP_PROFILE=TEST               # Active trip profile (default: TEST)
VITE_TZ=America/Chicago              # Timezone for scoring windows
VITE_TICKER_SPEED_MS=30000           # News ticker scroll speed in milliseconds

# Email digests (requires Resend API key or SMTP)
VITE_ENABLE_EMAIL_DIGEST=false       # Enable daily email digests
VITE_EMAIL_FROM=noreply@ecoquest.example
VITE_DIGEST_TO=staff@ecoquest.example
RESEND_API_KEY=
# Alternative SMTP:
# SMTP_URL=smtp://user:pass@host:port
